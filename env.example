# Database Configuration
DATABASE_URL=postgresql://dev:devpassword@localhost:5432/aragon_dev?schema=public

# PostgreSQL Container Settings
POSTGRES_USER=dev
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=aragon_dev
POSTGRES_PORT=5432

# Redis Configuration (for BullMQ job queues)
REDIS_HOST=localhost
REDIS_PORT=6379

# Cloudflare R2 Configuration (S3-compatible)
# IMPORTANT: S3_ENDPOINT should NOT include the bucket name
# The bucket name is specified separately in S3_BUCKET
S3_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
S3_BUCKET=aragon-uploads
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_REGION=auto

# Upload Validation Settings
MAX_UPLOAD_SIZE_BYTES=8000000  # 8MB max file size
MIN_WIDTH=400                  # Minimum image width in pixels
MIN_HEIGHT=400                 # Minimum image height in pixels
MIN_FILE_SIZE_BYTES=51200      # 50KB minimum file size
PHASH_THRESHOLD=10             # Perceptual hash similarity threshold (lower = more similar)

# Upload Verification Settings
MAX_VERIFICATION_ATTEMPTS=3
VERIFICATION_RETRY_DELAY_MS=5000

# Presigned URL Expiry
PRESIGNED_URL_EXPIRY_SECONDS=300  # 5 minutes

